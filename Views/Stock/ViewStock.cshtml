<div class="stock-overview">
    <h2>@ViewBag.Stock["companyName"]</h2>
    <ul>
        <li>Open: @ViewBag.Stock["open"]</li>
        <li>Latest: @ViewBag.Stock["latestPrice"]</li>
    </ul>
    <!-- TradingView Widget BEGIN -->
    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
    <script type="text/javascript">
        new TradingView.widget({
        "width": 750,
        "height": 400,
        "symbol": "@ViewBag.stock["symbol"]",
        "interval": "D",
        "timezone": "Etc/UTC",
        "theme": "Light",
        "style": "1",
        "locale": "en",
        "toolbar_bg": "#f1f3f6",
        "enable_publishing": false,
        "hide_top_toolbar": true,
        "hideideas": true
        });
    </script>
</div>
<hr>
<div class="market-news">
    <h4>Lates News on @ViewBag.Stock["companyName"]</h4>
    <ul>
        @foreach(var story in @ViewBag.StockNews)
        {
            <div class="story-container">
                <li>
                    <h5><a href="@story["url"]">@story["headline"]</a></h5>
                </li>
                <hr>
            </div>
        }
    </ul>
</div>